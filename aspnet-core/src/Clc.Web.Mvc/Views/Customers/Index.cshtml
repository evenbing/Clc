@using Clc.Clients
@{
    Layout = "~/Views/Shared/_CrudLayout.cshtml";
}

@section customScript
{
    <script type="text/javascript">
        crud.dgDefault.name = 'Customers';
        crud.dgDefault.sortName = 'cn';
        // crud.dgDefault.title = abp.setting.get('VI.DepotTitleName');
        crud.dgDefault.columns = [[
            { field: "cn", title: "编号", width: 100 },
            { field: "name", title: "名称", width: 100 },
            { field: "contact", title: "联系方式", width: 100 },
        ]];
    </script>
}

@*弹窗*@
<div id="dlg" class="easyui-dialog" closed="true" modal="true" buttons="#dlg-buttons" align="center" style="width: 450px; padding: 10px;">
    <form id="fm" class="easyui-form" method="post" novalidate>
        <table class="edit-tbl">
            <input id="id" name="id" type="hidden">
            <tr>
                <th><label for="cn">编号：</label></th>
                <td><input name="cn" class="easyui-textbox" data-options="required:true, validType:'length[1, @Customer.MaxCnLength]'" style="width: 100%"></td>
            </tr>
                <th><label for="name">名称：</label></th>
                <td><input name="name" class="easyui-textbox" data-options="required:true, validType:'length[2, @Customer.MaxNameLength]'" style="width: 100%"></td>
            </tr>
            <tr>
                <th><label for="contact">联系方式：</label></th>
                <td><input name="contact" class="easyui-textbox" data-options="validType:'length[2, @Customer.MaxContactLength]'" style="width: 100%"></td>
            </tr>
        </table>
    </form>
</div>
