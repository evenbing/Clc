@{
    Layout = "~/Views/Shared/_WorkLayout.cshtml";
}

@section workScripts
{
    <environment names="Development">
        <script src="~/js/finput.js" asp-append-version="true"></script>
        <script src="~/view-resources/Views/ArticleWork/Lend.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/js/finput.min.js" asp-append-version="true"></script>
        <script src="~/view-resources/Views/ArticleWork/Lend.min.js" asp-append-version="true"></script>
    </environment>
}

<div id="tb">
    任务日期: <input id="dd" class="easyui-datebox" style="width:120px" readonly>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-reload" plain="true" onclick="$('#dg').datagrid('reload')">刷新</a>
    &nbsp;全部&nbsp;<input id="all" class="easyui-checkbox">
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input id="managers" class="easyui-textbox" readonly style="width: 200px">
</div>
<table id="dg" title="线路列表" class="easyui-datagrid" toolbar="#tb"
        fit="true" fitColumns="true" rownumbers="true" singleSelect="true" striped="true" sortName="startTime">
    <thead>
        <tr>
            <th field="startTime" width="80" sortabl="true">出发时间</th>
            <th field="endTime" width="80">返回时间</th>
            <th field="ArticlesInfo" width="250">物品信息</th>
            <th field="vehicle" width="80" formatter="vehicleFormatter">车辆</th>
            <th field="routeName" width="80" sortable="true">线路名称</th>
            <th field="status" width="50" align="center">状态</th>
        </tr>
    </thead>
</table>

@*弹窗*@
<div id="dlgLend" class="easyui-dialog" title="物品领用" closed="true" modal="true" buttons="#dlg-buttons" align="center" style="height: 600px; width: 750px; padding: 10px;">
    <div style="margin-bottom:15px">
        <img id="photoLend" alt="" src="" style="float:left; margin-right:10px; width:160px; height:200px;" />
        <div style="font-size:52px; dislplay:table-cell">&nbsp;</div>
        <div style="font-size:52px; dislplay:table-cell" id="workerLend">worker</div>
        <div style="font-size:32px; dislplay:table-cell">&nbsp;</div>
        <div style="font-size:32px; dislplay:table-cell" id="routeLend"></div>
        <hr />
    </div>
    <div class="rfid" id="rfidLend"></div>

    <ul id="listLend" style="font-size: 30px">
    </ul>
</div>
<div id="dlg-buttons">
    <!--<a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-save" onclick="checkArticle(false)">保存</a>-->
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-cancel" onclick="closeLend()">取消</a>
</div>
