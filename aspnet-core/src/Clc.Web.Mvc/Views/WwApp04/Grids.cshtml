@model Clc.Clients.Outlet
@{
    ViewBag.Title = "菜单选择";
    Layout = "~/Views/Shared/_WeixinLayout.cshtml";
}

<div class="page js_show">
    <div class="page__hd" style="margin-left:10px">
        <h2 class="page__title">@Model.Name</h2>
        <h3 class="page__desc">@Model.Cn</h3>
    </div>
    <div class="page__bd">

    <div class="weui-grids">
        <a href="javascript:lookup();" class="weui-grid">
            <div class="weui-grid__icon">
                <img src="~/images/icon_nav_layout.png" alt="">
            </div>
            <p class="weui-grid__label">任务查看</p>
        </a>
        <a href="javascript:evaluate();" class="weui-grid">
            <div class="weui-grid__icon">
                <img src="~/images/icon_nav_feedback.png" alt="">
            </div>
            <p class="weui-grid__label">任务评价</p>
        </a>
    </div>

    </div>
</div>

@section footer
{
<script>
    function lookup() {
        weui.toast("处理中", 2000);
        window.location.href = "/WwApp04/Lookup"
    }
    
    function evaluate() {
        weui.toast("处理中", 3000);
        window.location.href = "/WwApp04/Evaluate"
    }
</script>
}
