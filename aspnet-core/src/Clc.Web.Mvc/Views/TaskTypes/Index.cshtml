@{
    Layout = "~/Views/Shared/_CrudLayout.cshtml";
}

@section customScript
{
    <script type="text/javascript">
        crud.dgDefault.name = 'TaskTypes';
        crud.dgDefault.sortName = 'cn';
        crud.dgDefault.columns = [[
            { field: "cn", title: "编号", width: 80, sortable: true },
            { field: "name", title: "名称", width: 80, sortable: true },
            { field: "groupName", title: "组名", width: 80, sortable: true},
            { field: "basicPrice", title: "基本价格", width: 100 }
        ]];
    </script>
}

@*弹窗*@
<div id="dlg" class="easyui-dialog" closed="true" modal="true" align="center" style="width: 400px; padding: 10px;">
    <form id="fm" method="post" novalidate>
        <table class="edit-tbl">
            <input id="id" name="id" type="hidden">
            <tr>
                <th><label for="cn">编号：</label></th>
                <td><input name="cn" class="easyui-textbox" data-options="required:true, validType:'length[1, @Clc.Types.Entities.TaskType.MaxCnLength]'" style="width: 100%"></td>
            </tr>
            <tr>
                <th><label for="name">名称：</label></th>
                <td><input name="name" class="easyui-textbox" data-options="required:true, validType:'length[1, @Clc.Types.Entities.TaskType.MaxNameLength]'" style="width: 100%"></td>
            </tr>
            <tr>
                <th><label for="groupName">组名：</label></th>
                <td><input name="groupName" class="easyui-textbox" data-options="validType:'length[1, @Clc.Types.Entities.TaskType.MaxNameLength]'" style="width: 100%"></td>
            </tr>
            <tr>
                <th><label for="basicPrice">基本价格</label></th>
                <td><input name="basicPrice" class="easyui-numberbox" data-options="required:true, validType:'length[1,3]'" style="width: 100%"></td>
            </tr>
        </table>
    </form>
</div>
