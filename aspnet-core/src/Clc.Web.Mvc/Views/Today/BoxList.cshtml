<table id="dg" class="easyui-datagrid" toolbar="#tb"
        fit="true" fitColumns="true" rownumbers="true" singleSelect="true" striped="true"
        url="GridDataBox" pagination="true" pageSize="20" sortName="cn">
    <thead>
        <tr>
            <th field="cn" width="60" align="center">编号</th>
            <th field="name" width="100">名称</th>
            <th field="boxRecordInfo" width="320">出入箱信息</th>
        </tr>
    </thead>
</table>
<div id="tb">
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-reload" plain="true" onclick="$('#dg').datagrid('reload')">刷新</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="reportTo()">报送</a>
</div>

@section scripts
{
    <script type="text/javascript">      
        function reportTo() {
            abp.ajax({
                url: 'ReportBoxTo',
                success: function (data) {
                    abp.notify.info("报告已发出");
                }
            });
        }
    </script>
}

