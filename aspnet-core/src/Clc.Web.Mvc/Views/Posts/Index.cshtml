@using Clc.Types
@{
    Layout = "~/Views/Shared/_CrudLayout.cshtml";
}

@section customScript
{
    <script type="text/javascript">
        crud.dgDefault.name = 'Posts';
        crud.dgDefault.sortName = 'cn';
        crud.dgDefault.columns = [[
            { field: "cn", title: "编号", width: 80, sortable: true },
            { field: "name", title: "名称", width: 80, sortable: true },
            { field: "defaultWorkRoleName", title: "缺省角色名", width: 80, sortable: true },
            { field: "appName", title: "微信应用名", width: 80, sortable: true },
        ]];
    </script>
}

@*弹窗*@
<div id="dlg" class="easyui-dialog" closed="true" modal="true" align="center" style="width: 400px; padding: 10px;">
    <form id="fm" method="post" novalidate>
        <table class="edit-tbl">
            <input id="id" name="id" type="hidden">
            <tr>
                <th><label for="cn">编号：</label></th>
                <td><input name="cn" class="easyui-textbox" data-options="required:true, validType:'length[1, @Post.MaxCnLength]'" style="width: 100%"></td>
            </tr>
            <tr>
                <th><label for="name">名称：</label></th>
                <td><input name="name" class="easyui-textbox" data-options="required:true, validType:'length[1, @Post.MaxNameLength]'" style="width: 100%"></td>
            </tr>
             <tr>
                <th><label for="defaultWorkRoleName">缺省角色名：</label></th>
                <td><input name="defaultWorkRoleName" class="easyui-textbox" data-options="validType:'length[1, @Post.MaxNameLength]'" style="width: 100%"></td>
            </tr>
            <tr>
                <th><label for="appName">微信应用名：</label></th>
                <td><input name="appName" class="easyui-textbox" style="width: 100%"></td>
            </tr>
        </table>
    </form>
</div>
