@model Clc.Web.Models.Weixin.VehicleMTViewModel
@{
    ViewBag.Title = "车辆维护";
    Layout = "~/Views/Shared/_WeixinLayout.cshtml";
}

<form name="fm" class="weui-cells weui-cells_form" action ="/WwApp02/DoVehicleMT" method="post" onsubmit="onSubmit()">
    @Html.ValidationSummary()
    <input name="workerId" type="hidden" value="@Model.WorkerId">
    <div class="weui-cell weui-cell_select weui-cell_select-after">
        <div class="weui-cell__hd"><label class="weui-label">车辆:</label></div>
        <div class="weui-cell__bd">
            <select class="weui-select" name="vehicleId">
            @for (int i = 0; i < Model.Vehicles.Count; i++)
            {
                <option value="@Model.Vehicles[i].Id">@Model.Vehicles[i].Name</option>
            }
            </select>
        </div>
    </div>
    <div class="weui-cell weui-cell_select weui-cell_select-after">
        <div class="weui-cell__hd"><label class="weui-label">维护类型:</label></div>
        <div class="weui-cell__bd">
            <select class="weui-select" name="vehicleMTTypeId">
            @for (int i = 0; i < Model.VehicleMTTypes.Count; i++)
            {
                <option value="@Model.VehicleMTTypes[i].Id">@Model.VehicleMTTypes[i].Name</option>
            }
            </select>
        </div>
    </div>
    <div class="weui-cell">
        <div class="weui-cell__hd"><label for="MTDate" class="weui-label">日期:</label></div>
        <div class="weui-cell__bd">
            <input class="weui-input" name="mTDate" type="date" />
        </div>
    </div>
    <div class="weui-cell">
        <div class="weui-cell__hd"><label for="content" class="weui-label">内容:</label></div>
        <div class="weui-cell__bd">
            <input class="weui-input" name="content" type="text" />
        </div>
    </div>
    <div class="weui-cell">
        <div class="weui-cell__hd"><label for="price" class="weui-label">价格（元）:</label></div>
        <div class="weui-cell__bd">
            <input class="weui-input" name="price" type="number" step="0.01" placeholder="请输入价格" />
        </div>
    </div>
    <div class="weui-cell">
        <div class="weui-cell__hd"><label for="remark" class="weui-label">备注:</label></div>
        <div class="weui-cell__bd">
            <input class="weui-input" name="remark" type="text" />
        </div>
    </div>
    <div class="weui-cell">
        <input type="submit" value="确定" class="weui-btn weui-btn_primary" />
    </div>
</form>
